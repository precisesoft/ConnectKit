{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "src/tests/**/*", "**/*.spec.ts", "**/*.test.ts"]
}