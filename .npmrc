# NPM configuration to fix optional dependencies bug in CI
# See: https://github.com/npm/cli/issues/4828

# Force resolution of optional dependencies for Linux x64
optional=false
fund=false
audit=false

# Rollup native binary configuration
@rollup:registry=https://registry.npmjs.org/

# Increase timeout for slow networks in CI
timeout=300000

# Prevent npm from failing on optional dependency issues
force=false
legacy-peer-deps=false